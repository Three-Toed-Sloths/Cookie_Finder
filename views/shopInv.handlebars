<div class='parallax-container'>
    <div class='container'>
        <div class='seller-info' sellers-id='{{productArr.0.id}}'>
            <h3 id="sellerName">{{productArr.0.sellerName}}</h3>
            <h5>When: 11am - 4pm</h5>
            <a id="showAdd"></a>
            <h5 id="sellerLocation"></h5>
        </div>
        <div class='parallax banner'>
            <img src='/assets/images/cookie_heart_banner.jpg' style='position: relative; right: 50px;'>
        </div>

    </div>

    <div class="container" id='shop'>
        <div class="row">

            <div class='col s12 xl8'>
                <div class='card' id='inventory-view'>
                    <div class="card-content">
                        <div class="row">
                            {{#each productArr}}
                                {{> storeFront/itemCard}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <div class='cart-container'>
                <div class='col s12 xl4'>
                    <div class="card">
                        <div class='card-content my-cart'>
                            <div>
                                <h5>My Cart:</h5>
                                <hr>
                                <ul id="cartList">
                                    {{#each cartArr}}
                                        {{> storeFront/cart}}
                                    {{/each}}
                                </ul>
                            </div>
            
                            <div class='card-action cart-bottom'>
                                <p id='subtotal'>Subtotal: $<span id="cartSubTotal">0</span></p>
                                <p id='tax'>Tax: $<span id="cartTaxTotal">0</span></p>
                                <p id='total'>Total: $<span id="cartTotal">0</span></p>
                                <br>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class='material-icons prefix'>account_circle</i>
                                        <input id="buyer" type="text" class="validate">
                                        <label for='buyer'>Name</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class='material-icons prefix'>contact_mail</i>
                                        <input id="buyerEmail" type="email" class="validate contact-email">
                                        <label for='buyerEmail'>Email</label>
                                    </div>
                                </div>

                                <button href="/order" class="green waves-effect waves-light btn" id='checkout'>
                                <i class="material-icons left">local_atm</i>Checkout</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
